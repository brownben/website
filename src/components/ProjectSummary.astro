---
interface Props {
  title: string
  links: { location: string; text: string }[]
}
const { title, links } = Astro.props
---

<article>
  <h2 class="pb-4 text-2xl font-extrabold leading-none text-gray-900">
    {title}
  </h2>
  <p class="pb-3 text-sm leading-snug text-gray-80">
    <slot />
  </p>
  <div class="flex flex-col sm:flex-row gap-2 sm:gap-5">
    {
      links.map((link) => (
        <a
          href={link.location}
          class="block text-sm font-medium text-gray-600 hover:text-blue-600"
        >
          {link.text} â†’
        </a>
      ))
    }
  </div>
</article>
