---
interface Props {
  title: string
  links: { location: string; text: string }[]
}
const { title, links } = Astro.props
---

<article class="max-w-prose">
  <h2
    class="pb-4 text-2xl font-extrabold leading-none text-gray-900 dark:text-gray-100"
  >
    {title}
  </h2>
  <p class="pb-3 text-sm leading-snug text-gray-800 dark:text-gray-200">
    <slot />
  </p>
  <div class="flex flex-col gap-2 sm:flex-row sm:gap-5">
    {
      links.map((link) => (
        <a
          href={link.location}
          class="block rounded text-sm font-medium text-gray-600 outline-none ring-blue-400 transition duration-100 hover:text-blue-600 focus:text-blue-600 focus-visible:ring dark:text-gray-400"
        >
          {link.text} â†’
        </a>
      ))
    }
  </div>
</article>
